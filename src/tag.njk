---
pagination:
  data: collections
  alias: tag
  size: 1
  addAllPagesToCollections: true
layout: base.njk
permalink: /category/{{tag | slugify }}/
eleventyComputed:
  title: Статии в категория - "{{ tag }}"
---

<h1>{{ title }}</h1>

{% for post in collections[tag] %}
  <li>
    <a href="{{post.url}}">{{post.data.title}}</a>
  </li>
{% endfor %}

