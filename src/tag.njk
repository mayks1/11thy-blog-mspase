---
pagination:
  data: collections
  alias: tag
  size: 1
  addAllPagesToCollections: true
layout: base.njk
permalink: /category/{{tag | slugify }}/
eleventyComputed:
  title: Статии в категория - "{{ tag }}"
---

<h1 class="text-center">{{ title }}</h1>

<!-- Block 2 column  -->
<div class="grid">
  <!-- Column Categories Posts -->
  <div>
    <article>
      <ul>
        {% for post in collections[tag] %}
          <li class="category-list-item">
            <hgroup>
              <h2 class="category-heading"><a href="{{post.url}}">{{post.data.title}}</a></h2>
              <h3>{{post.data.description}}</h3>
            </hgroup>
          </li>
        {% endfor %}
      </ul>
    </article>
  </div>

  <!-- Column Side Bar -->
  <div class="side-bar">
      {% include 'sidebar.njk' %}
  </div>
  <!-- End Column Side Bar -->
</div>
<!-- Block 2 column  -->


