---
title: Контакт
layout: 'base.njk'
---
 <!-- Section Main-Container-->
    <section id="main-container" class="container-fluid">

        <div id="single-image" class="container">

            <h3 class="photo-title font-weight-light">КОНТАКТ С МЕН</h3>
            <div style="height: 40px;"></div>

            <div class="row">

                <div class="col-lg-8">
                <!-- Contact Form -->
                    <form class="font-weight-light">
                        <div class="form-group">
                            <label for="InputEmail">Имейл адрес:</label>
                            <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Въведете имейл" required>
                            <small id="emailHelp" class="form-text text-muted">Никога няма да споделям имейла ви с някой друг.</small>
                        </div>
                        <div class="form-group">
                            <label for="InputName">Име:</label>
                            <input type="text" class="form-control" id="InputName" aria-describedby="nameHelp" placeholder="Въведете Име и Фамилия" required>
                        </div>
                        <div class="form-group">
                            <label for="gender">Обръщение:</label>
                            <select class="custom-select custom-select-sm">
                                <option selected>Моля, изберете</option>
                                <option value="1">Г-н</option>
                                <option value="2">Г-ца/Г-жа</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Subject">Относно:</label>
                            <input type="text" class="form-control" id="Subject" aria-describedby="nameHelp" placeholder="" required>
                        </div>
                        <div class="form-group">
                            <label for="messageText">Вашето запитване:</label>
                            <textarea id="messageText" name="messageText" placeholder="Напишете нещо..." style="height:200px" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="inputFile">Изпратете ми файл:</label>
                            <input type="file" class="form-control-file" id="inputFile">
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                            <button type="submit" class="btn btn-secondary mt-3">Изпрати</button>
                            </div>
                        </div>
                    </form>
                <!-- End of Contact Form -->
                </div>

                <!-- Column Side Bar -->
                <div class="col-lg-4 d-none d-lg-block">
                    {% include 'sidebar-categories.njk' %}
                </div>
                <!-- End Column Side Bar -->
            </div>
        </div>

    </section><!-- End of Section -->

    <div class="empty_space"></div>