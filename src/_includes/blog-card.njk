<article>
    <div class="image">
        <header>
            <h2>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
        </header>
            <a href="{{ post.url }}">
            <img src="{{ post.data.image }}" alt="{{ post.data.alt }}"></a>
            <div>
                {% for category in post.data.tags %}
                    <a class="badge badge-secondary" href="/category/{{ category | slugify }}">{{ category }}</a>
                {% endfor %}
            </div>
        </div>
        <div>
            <div class="post-info">
                <div class="date">
                    <span class="date-icon"></span>
                    <span>{{ post.data.date | formatDate }}</span>
                </div>
                <span>{{ post.content | readingTime }} време за четене.</span>
            </div>
        </div>
    <footer>
        <div>
            <p>{{ post.data.description }}</p>
        </div>
        <a href="{{ post.url }}" role="button">Продължи да четеш</a>
    </footer>
</article>